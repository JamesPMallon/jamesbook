<!DOCTYPE html>
<html>
<head>
  <title>Jamesbook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
</head>
<body>
	<div class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-inner">
			<div class="container">
				<a href="" class="brand">Jamesbook</a>
				<ul class="nav">
					<li><%= link_to "All Statuses", feed_path %></li>
				</ul>
				<ul class="nav pull-right">
					<% if user_signed_in? %>
					  <div class="btn-group">
					    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
					      <%= current_user.full_name %>
					      <span class="caret"></span>
					    </button>
					    <ul class="dropdown-menu">
					      <li><%= link_to "Profile Page Not Working", edit_user_registration_path %></li>
					      <li><%= link_to "Edit Details", edit_user_registration_path %></li>
					       <li role="presentation" class="divider"></li>
    					   <li role="presentation"><%= link_to "Log Out", logout_path %></li>
					    </ul>
					  </div>
						<li><li>
					<% else %>
						<li><%= link_to "Register", register_path %></li>
						<li><%= link_to "Log in", login_path %></li>
					<% end %>

				</ul>
			</div>
		</div>
	</div>
	<div class="container">
    <% flash.each do  |type, message| %>
	<div class="alert <%= flash_class type %>">
    		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    		<%= message %>
    	</div>
    <% end %>

		<%= yield %>
	</div>
</body>
</html>
